extends layout 

block content
  h1= title
  - let items = results;

  div.container-fluid
    div.row
      each horse,index in items
        div.col-sm-2(onclick=`buy(${index})`) #{horse.name} 
        div.col-sm-2(onclick=`buy(${index})`) #{horse.color}
        div.col-sm-2(onclick=`buy(${index})`) #{horse.price}
  br
  hr             

  script. 
       function buy(index)
       {
        alert(`you purchased Item: ${index+1}`)
       }